# ~/.cron_env
# Minimal environment for cron jobs â€” no pyenv, no conda

alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi


# Basic paths (adjust if you need more)
export PATH="/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin"

# Locale to avoid cron's default C locale issues
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8


# Python virtualenv (if needed for your job)
# Uncomment and change path to your venv
# source /path/to/venv/bin/activate

# Any other needed variables for scripts
# export VAR_NAME="value"
